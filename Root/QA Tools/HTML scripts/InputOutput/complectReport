
function logReport(type,testName, list) {
    switch(type){
        case "tag":
        case 'regex':
            if (list?.length) console.log(`â­• Faild:    ${testName}: ${list.join(', ')}`);
            else console.log(`ðŸŸ¢ Succeed:  ${testName}`);
            break;
        case "images":
            if (list?.length) console.log(`ðŸŸ¢ Succeed:  image availability: ${list.join(', ')}`);
            else console.log(`ðŸ”´ Faild:    image availability: no images found`);
            break;
        default:
        
            break;
    }
}
function tableReport(testName, list) {    
    let result = 'ðŸ”´ Faild';
    let log = ""
    if (list?.length) log = `${testName}: ${list.join(', ')}`;
    else result = 'ðŸŸ¢ Succeed'
    return [result, testName, log]
}

module.exports = {logReport, tableReport};